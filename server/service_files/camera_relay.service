[Unit]
Description=IFO Camera Relay service
After=network.target

[Service]
Type=simple
User=__USERNAME__
EnvironmentFile=__SERVER_DIR__/.env
WorkingDirectory=__SERVER_DIR__
ExecStart=__SERVER_DIR__/.venv/bin/gunicorn -w 1 --threads 4 -b 127.0.0.1:8001 --timeout 120 camera_relay:app
Restart=always

[Install]
WantedBy=multi-user.target